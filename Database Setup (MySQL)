CREATE DATABASE college;

USE college;

CREATE TABLE employees (
  id INT PRIMARY KEY AUTO_INCREMENT,
  name VARCHAR(50),
  department VARCHAR(50),
  salary DOUBLE
);

INSERT INTO employees (name, department, salary)
VALUES ('Alice', 'HR', 35000),
       ('Bob', 'IT', 50000),
       ('Carol', 'Finance', 40000);

CREATE TABLE attendance (
  id INT PRIMARY KEY AUTO_INCREMENT,
  name VARCHAR(50),
  status VARCHAR(20)
);
